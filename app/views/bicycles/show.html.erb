<div class="main-container">

  <div class="d-flex flex-col justify-content-between align-items-top ">
    <div class="col">



    <div class="carousel">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1560799486-f4b726357fcd?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80" alt="1 slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1566663589567-6a44aef25c52?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1654&q=80" alt="2 slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1570784063106-7431cb7c3d53?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>
</div>

 <h3><strong><%= @bicycle.brand%>: <%= @bicycle.model %></strong>
    </h3>

     <p>
       <strong>Description:</strong>
       <%= @bicycle.description %>
     </p>
     <p><strong>Size:</strong>
      <%= @bicycle.size %>
     </p>
     <p><strong>Specifications:</strong>
      <%= @bicycle.specs %>
     </p>

 <br>
 <br>





 </div>


     <div class="col" id="booking_form">
      <p>
        <%= simple_form_for [ @bicycle, @booking ] do |f|   %>
          <strong>Price per day: <%= @bicycle.price %></strong>
          <%= f.input :date_start %>
          <%= f.input :date_end %>
          <%= f.submit 'Book', class: 'btn btn-primary btn-lg btn-block'%>
        <% end %>
      </p>
    </div>
  </div>

<div class="reviews">

    <h3>
      <%= pluralize @bicycle.reviews.size, "review" %>
    </h3>
  <div id="reviews">
    <% if @bicycle.reviews.blank? %>
      Be the first to leave a review for <%= @bicycle.model %>
    <% else %>
      <% @bicycle.reviews.each do |review| %>
        <p id="review-<%= review.id %>"> <%= review.content %></p>
      <% end %>
    <% end %>

</div>
  <%= simple_form_for([@bicycle, @review]) do |f| %>
    <%= f.input :content, as: :text%>
    <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>

</div>

</div>



















