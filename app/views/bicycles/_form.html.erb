<%= simple_form_for(@bicycle) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :photo, as: :file %>
    <%= f.input :activity %>
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :size %>
    <%= f.input :specs %>
    <%= f.input :gender %>
    <%= f.input :pick_up %>
    <%= f.input :price %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

